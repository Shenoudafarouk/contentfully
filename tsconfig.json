{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "lib": [
            "es2017",
            "es2015",
            "dom"
        ],
        "jsx": "preserve",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./dist/",
        "strict": true,
        "types": [],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "./test/**/*"
    ]
}
